[core]
	editor = vim
	commentChar = ";"
	excludesfile = ~/.gitignore
	pager = delta --color-only --theme='Solarized (dark)'
[interactive]
	diffFilter = delta --color-only --theme='Solarized (dark)'
[push]
	default = simple
[pull]
	rebase = false
[alias]
	co = checkout
	st = status
	dt = difftool
	mt = mergetool
	pl = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset' --abbrev-commit
[diff]
	tool = vimdiff
[difftool]
	prompt = false
	trustExitCode = true # abort all diffs by `:cq`
[merge]
	tool = vimdiff
[mergetool]
	keepBackup = false
[fetch]
	prune = true
[ghq]
	root = ~/work/ghq
[commit]
